<footer class='uk-background-secondary uk-padding width-1-1'>
  <div
    class='uk-flex uk-flex-column uk-flex-center uk-flex-middle uk-padding uk-light'
  >
    {{! Image & Description }}
    <div class=''>
      {{! template-lint-disable require-valid-alt-text }}
      <img src='/images/gower_college-transformed.webp' width='150' alt='' />
      <p>Cynlluniwyd ar gyfer DVLA gan Fyfyrwyr Coleg Gwyr Abertawe: Jake
        Rosser, Rhys Hughes, Rhys Evans, Miron Pisarski, Brandon Curran, Adrian
        Gorski</p>
      <p class='uk-margin'><strong>Copyright 2022 DVLA</strong></p>
    </div>
    {{! Policies }}
    <div>
      <LinkTo @route='index' class='uk-padding'>Polisi Preifatrwydd</LinkTo>
      <LinkTo @route='index' class='uk-padding'>Polisi Cwcis</LinkTo>
    </div>
    <br />
    <br />

    {{! Switch Language }}
    <button class='uk-button uk-button-default' type='button'>Switch Laguage</button>
    <div uk-dropdown>
      <ul class='uk-nav uk-dropdown-nav'>
        <li><LinkTo @route='index'>🇬🇧 English (UK)</LinkTo></li>
        <li class='uk-nav-divider'></li>
        <li><LinkTo @route='welsh/index'>🏴󠁧󠁢󠁷󠁬󠁳󠁿 Welsh </LinkTo></li>
      </ul>
    </div>
    {{! Socials }}
    {{! template-lint-disable no-inline-styles }}
    <div class='uk-margin' style='margin-top: 40px;'>
      <div class='uk-flex uk-flex-center'>
        <a
          hreflang='en'
          href='https://www.facebook.com/dvlagovuk'
          class='uk-button uk-button-primary'
          style='margin-right: 10px;'
          aria-label='Facebook'
        ><span uk-icon='icon: facebook'></span></a>
        <a
          hreflang='en'
          href='https://twitter.com/DVLAgovuk'
          class='uk-button uk-button-primary'
          style='margin-right: 10px;'
          aria-label='Twitter'
        ><span uk-icon='icon: twitter'></span></a>
        <a
          hreflang='en'
          href='https://www.instagram.com/dvlagov/'
          class='uk-button uk-button-primary'
          style='margin-right: 10px;'
          aria-label='Instagram'
        ><span uk-icon='icon: instagram'></span></a>
      </div>

    </div>
  </div>
</footer>